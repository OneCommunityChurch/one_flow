{% extends "site_base.html" %}
{% block header %}
<div id="wrapper">
<!-- Header -->
<div id="header">
        <div style="padding-left:30px; padding-top:50px; font-size:48pt; font-weight: bold; font-family: verdana">One Job Board</div>
</div>
<!-- Header -->
{% endblock %}


{% block menu %}
<!-- Menu -->
<div id="menu">

</div>
<!-- Menu -->
{% endblock %}
{% block submenu %}{% endblock %}
{% block settings %}{% endblock %}





{% block content %}
    {% if form.errors %}
    <!-- Error Box -->
        <div class="error"><span>Error!</span>
            <p> The Usernam or Password is incorrect.</p>
        </div>
    <!-- Error Box -->
    {% endif %}

<div style='padding-top: 5%; padding-left: 30%; padding-bottom: 5%;'>


    <form action="" method="post" id="login-form">
      <div>
        <label for="id_username">Username:</label> <input id="id_username" type="text" name="username" maxlength="30" />
      </div>
      <div class="form-row">
            <label for="id_password">Password:</label> <input type="password" name="password" id="id_password" />
            <input type="hidden" name="this_is_the_login_form" value="1" />
            <input type="hidden" name="next" value="/job_board" />
      </div>
      <div class="submit-row">
        <label>&nbsp;</label><input type="submit" value="Log in" />
      </div>
        {% csrf_token %}
    </form>

</div>


{% endblock %}